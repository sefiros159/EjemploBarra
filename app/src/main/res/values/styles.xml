<resources>

    <!-- Base application theme. -->
    <!-- Para todas las bases de android -->
    <style name="AppBase" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <!-- colores adicionales -->
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textColorPrimary">@color/icons</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:icon">@color/icons</item>
    </style>

    <!--Para las versiones menores a 5.0-->
    <style name="AppTheme" parent="AppBase"/>

</resources>
